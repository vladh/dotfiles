#!/bin/sh -eu

# To be used with configs generated by: ddns-confgen -s myhost.vladh.net

CURR_PUBLIC_IP=$(dig +short myip.opendns.com @resolver1.opendns.com)
KEY_PATH="/etc/ddns-update.key"
NS="ns1.vladh.net"
DOMAIN="$(hostname).vladh.net."
ZONE="vladh.net."

nsupdate -k "${KEY_PATH}" -v << EOF
server $NS
zone $ZONE
update add $DOMAIN 30 A $CURR_PUBLIC_IP
send
EOF
