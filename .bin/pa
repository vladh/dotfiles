#!/bin/sh
if [ $# -eq 0 ]; then
  echo "Usage: pa <filepath> [<remote-folder>]"
  echo "  If you specify the remote folder, you must specify a leading static/ or things/ too."
  exit
fi
if [ $# -eq 1 ]; then
  scp -r "$1" vladh@yavin:/srv/www/vladh-website-static/things/
fi
if [ $# -eq 2 ]; then
  scp -r "$1" vladh@yavin:/srv/www/vladh-website-static/$2/
fi
