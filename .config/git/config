[include]
    path = ~/bentus/dotfiles-extra/.config/git/private
[core]
    excludesfile = ~/.config/git/gitignore_global
    editor = nvim
[alias]
    a = add
    aa = add --all .
    cm = commit --verbose
    cma = commit --amend
    co = checkout
    d = diff
    ds = diff --staged
    p = push
    pf = push --force-with-lease
    pl = pull
    st = status
[merge]
    tool = vimdiff
[push]
    default = simple
[pull]
    rebase = true
[sendemail]
    annotate = yes
[init]
    defaultBranch = main
[user]
    name = Vlad-Stefan Harbuz
    email = vlad@vladh.net
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[diff]
    wsErrorHighlight = all
