set $mod Mod4

font pango:Ubuntu Mono 10
floating_modifier $mod
focus_follows_mouse no

default_border none
# A hack to hide the title bar. Remember it will always be hidden.
# https://github.com/swaywm/sway/issues/1286
hide_edge_borders --i3 smart

client.focused          #444444 #444444 #FFFFFF #000000   #000000
client.focused_inactive #333333 #5F676A #FFFFFF #484E50   #5F676A
client.unfocused        #333333 #222222 #888888 #292D2E   #222222
client.urgent           #2F343A #900000 #FFFFFF #900000   #900000
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C
client.background       #FFFFFF

bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86MonBrightnessUp exec brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+shift+0 exec poweroff
bindsym Print exec wlss-full
bindsym $mod+p exec wlss-full
bindsym $mod+o exec wlss

bindsym $mod+Shift+c reload
bindsym $mod+Shift+x exec swaynag -t warning \
        -m 'Really exit sway?' \
        -b 'Yes, exit sway' \
        'swaymsg exit'

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Return exec kitty
bindsym $mod+d exec "wofi --show drun"

workspace_layout tabbed

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "q"
set $ws5 "w"
set $ws6 "e"
set $wss1 "a"
set $wss2 "s"

workspace $ws1 output primary DP-4
workspace $ws2 output primary DP-4
workspace $ws3 output primary DP-4
workspace $ws4 output primary DP-4
workspace $ws5 output primary DP-4
workspace $ws6 output primary DP-4
workspace $wss1 output secondary DP-0.8
workspace $wss2 output secondary DP-0.8

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+q workspace $ws4
bindsym $mod+w workspace $ws5
bindsym $mod+e workspace $ws6
bindsym $mod+a workspace $wss1
bindsym $mod+s workspace $wss2

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+q move container to workspace $ws4
bindsym $mod+Shift+w move container to workspace $ws5
bindsym $mod+Shift+e move container to workspace $ws6
bindsym $mod+Shift+a move container to workspace $wss1
bindsym $mod+Shift+s move container to workspace $wss2

bindsym $mod+z layout tabbed
bindsym $mod+x kill
bindsym $mod+c layout toggle split

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# bindsym $mod+a focus parent
# bindsym $mod+semicolon split h
# bindsym $mod+v split v
# bindsym $mod+s layout stacking

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar swaybar_command waybar

output * bg ~/Pictures/wallpaper.jpg fill

input "type:keyboard" {
        xkb_layout vladh
}

input "type:touchpad" {
        dwt enabled
        tap enabled
        natural_scroll enabled
        middle_emulation enabled click_method clickfinger
}

include ~/.config/sway/config.d/*
include ~/.config/sway/`hostname`

exec "systemctl --user import-environment; systemctl --user start graphical-session.target"
